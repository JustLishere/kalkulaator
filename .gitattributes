def calculator():
    num1 = float(input("Sisesta esimene number: "))
    operation = input("Vali tehe (+, -, *, /): ")
    num2 = float(input("Sisesta teine number: "))

    if operation == '+':
        print("Vastus:", num1 + num2)
    elif operation == '-':
        print("Vastus:", num1 - num2)
    elif operation == '*':
        print("Vastus:", num1 * num2)
    elif operation == '/':
        if num2 != 0:
            print("Vastus:", num1 / num2)
        else:
            print("Viga: Nulliga jagamine pole lubatud!")
    else:
        print("Viga: Vigane tehe!")

calculator()